@*@model IEnumerable<Bowlers>*@
@model IndexViewModel

@*// Display the team name using ViewBag that was passed and set in the homecontroller "TeamName = teamname"*@
<h1>@ViewBag.Team</h1>


@*// Loop thorugh each element of the bowler in a table and apply bootstrap table classes for styling*@
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#Id</th>
                <th scope="col">First Name</th>
                <th scope="col">Middle Initial</th>
                <th scope="col">Last Name</th>
                <th scope="col">Address</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Zip</th>
                <th scope="col">Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model.Bowlers)
            {
                <tr>
                    <th scope="row">@x.BowlerId</th>
                    <td>@x.BowlerFirstName</td>
                    <td>@x.BowlerMiddleInit</td>
                    <td>@x.BowlerLastName</td>
                    <td>@x.BowlerAddress</td>
                    <td>@x.BowlerCity</td>
                    <td>@x.BowlerState</td>
                    <td>@x.BowlerZip</td>
                    <td>@x.BowlerPhoneNumber</td>
                </tr>
            }
        </tbody>
    </table>
</div>

    @*// Apply different styling when the pagination is clicked or not*@

<div page-info="@Model.PageNumberInfo"
     page-url-teamname="@Model.TeamName"
     page-classes-enabled="true"
     page-class="btn"
     page-class-normal="btn-outline-dark text-black"
     page-class-selected="btn-info"
     class="btn-group pull-right m-1">
</div>

